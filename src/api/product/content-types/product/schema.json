{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 70,
      "minLength": 5
    },
    "slug": {
      "type": "uid",
      "required": true,
      "minLength": 3,
      "maxLength": 150
    },
    "description": {
      "type": "text"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "size": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "minLength": 3,
      "default": "12 ml"
    },
    "price": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "availableQty": {
      "type": "integer",
      "default": 0,
      "required": true
    }
  }
}
